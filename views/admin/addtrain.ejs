    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <script
  src="https://code.jquery.com/jquery-3.7.1.js"
  integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
  crossorigin="anonymous"></script>
  <style>
    .recommendationList {
        border: 1px solid #ddd;
        background-color: white;
        max-height: 200px;
        overflow-y: auto;
    }

    .recommendationList li {
        cursor: pointer;
    }

    .recommendationList li:hover {
        background-color: #f1f1f1;
    }
  </style>
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="/admin/home" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><img class="fa fa-hashtag me-2" width="35" src="/logo.png"></img>IRCTC</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Indian Railway</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/admin/home" class="nav-item nav-link "><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
            
                    <a href="/admin/shedule" class="nav-item nav-link "><i class="fa fa-th me-2"></i>Sheduled Trains</a>
                    <a href="/admin/train" class="nav-item nav-link "><i class="fa fa-keyboard me-2"></i>Tikit Booked</a>
                    <a href="/admin/trainlist" class="nav-item nav-link active"><i class="fas fa-list me-2"></i></i>Train List</a>
                    <a href="/admin/report" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i> Report</a>  
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control border-0" type="search" placeholder="Search">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">Indian Railway</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->

            <!-- Train List Table -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Add Train Detail</h6>
                            <form method="post" action="/admin/addTrain">
                                <% if(massage != ""){ %>
                                    <% if(isError == 0) { %>
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <%= massage %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } else { %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <%= massage %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } %>
                                <% } %>
                                <div class="d-flex justify-content-between">
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputEmail1" class="form-label">Enter Train Number</label>
                                        <input type="test" class="form-control" id="trainumber" name="trainumber">
                                    </div>
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Enter Short Name of Train</label>
                                        <input type="test" class="form-control" id="tsname" name="tsname">
                                    </div>
                                </div>
                                <div class="mb-3 form-check">
                                    <label for="exampleInputPassword1" class="form-label">Enter Long Name of Train</label>
                                    <input type="test" class="form-control" id="tlname" name="tlname">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Enter Sorce of Train</label>
                                        <input type="test" class="form-control" id="sorce" name="sorce">
                                        <ul class="list-group position-absolute recommendationList" id="recommendationListSorce" style="width: 33%;">
                                            
                                        </ul>
                                    </div>
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Enter Deparcher Time</label>
                                        <input type="test" class="form-control" id="deparcherTime" name="deparcherTime">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Enter Destination</label>
                                        <input type="test" class="form-control" id="destination" name="destination">
                                        <ul class="list-group position-absolute recommendationList" id="recommendationListDestination" class="recommendationList" style="width: 33%;">
                                            
                                        </ul>
                                    </div>
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Enter Arival Time</label>
                                        <input type="test" class="form-control" id="arivalTime" name="arivalTime">
                                    </div>
                                </div>     
                                <div class="d-flex justify-content-between ">
                                    <div class="mb-3 form-check col-sm-6 ">
                                        <label for="exampleInputPassword1" class="form-label">Total Time</label>
                                        <input type="test" class="form-control" id="totaltime" name="totaltime">
                                    </div>
                                    <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Total KM</label>
                                        <input type="test" class="form-control" id="tkm" name="tkm">
                                    </div>
                                </div>
                                <div class="mb-3 form-check col-sm-6">
                                        <label for="exampleInputPassword1" class="form-label">Avarage Speed</label>
                                        <input type="test" class="form-control" id="avgspeed" name="avgspeed">
                                </div>
                                <hr>
                                <div class="mb-3 form-check">
                                    <ul id="stop-list">
                                        
                                    </ul>
                                    <button type="button" class="btn btn-primary btn-sm" id="addstopbtn">Add Stops</button>
                                    <input type="hidden" value="" id="totalStation" name="totalStation">
                                </div>
                                <hr>
                                <div class="mb-3 form-check">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                            <script>
                                $(document).ready(function(){
                                    let totalStation = 0;
                                    $("#addstopbtn").click(function(){
                                        const htmlstring = `
                                        <li style="list-style: none;">
                                            <p>Stop ${totalStation}</p>
                                            <div class="d-flex justify-content-between ">
                                                <div class="mb-3 form-check col-sm-6 codeContainer">
                                                     <label for="exampleInputPassword1" class="form-label">Station Code</label>
                                                    <input type="test" class="form-control station-code" id="stationcode${totalStation}" name="stationcode${totalStation}">
                                                     <ul class="list-group position-absolute recommendationStopCode recommendationList" id="recommendationStopCode" class="recommendationList" style="width: 33%;">
                                            
                                                    </ul>
                                                </div>
                                                <div class="mb-3 form-check col-sm-6 nameContrainer">
                                                    <label for="exampleInputPassword1" class="form-label">Staion Full Name</label>
                                                    <input type="test" class="form-control stationName" id="stationname${totalStation}" name="stationname${totalStation}">
                                                </div>
                                            </div>
                                             <div class="d-flex justify-content-between ">
                                                <div class="mb-3 form-check col-sm-6 ">
                                                     <label for="exampleInputPassword1" class="form-label">Arival Time</label>
                                                    <input type="test" class="form-control" id="arivaltime${totalStation}" name="arivaltime${totalStation}">
                                                </div>
                                                <div class="mb-3 form-check col-sm-6">
                                                    <label for="exampleInputPassword1" class="form-label">Departure Time</label>
                                                    <input type="test" class="form-control" id="departureTime${totalStation}" name="departureTime${totalStation}">
                                                </div>
                                            </div>
                                             <div class="d-flex justify-content-between ">
                                                <div class="mb-3 form-check col-sm-6 ">
                                                     <label for="exampleInputPassword1" class="form-label">Day :</label>
                                                    <input type="number" class="form-control" id="Day${totalStation}" name="Day${totalStation}">
                                                </div>
                                                <div class="mb-3 form-check col-sm-6">
                                                    <label for="exampleInputPassword1" class="form-label">Distance From Sorce(KM)</label>
                                                    <input type="test" class="form-control" id="distanceFromSorce${totalStation}" name="distanceFromSorce${totalStation}">
                                                </div>
                                            </div>
                                        </li>
                                        `;
                                        totalStation = totalStation+1;
                                        $("#stop-list").append(htmlstring);
                                        $("#totalStation").val( totalStation);
                                    });
                                
                                    $(`#stop-list`).on("input",`.station-code`,function(){
                                        const stopCode = $(this).val();
                                        const inputField = $(this); 
                                        if(stopCode !== ""){
                                            $.ajax({
                                                url: `/admin/getStationCodeRecomendation/${stopCode}`,
                                                type: "GET",
                                                success: function(res){
                                                    recommendationList = "";
                                                    for(let i in res){
                                                        recommendationList = recommendationList + `<li class="list-group-item stationCodeRecomenation d-flex justify-content-between"><span class="codeRecommendation">${res[i].code}</span><span class="stationNameAutofill">${res[i].name}</span></li>`;
                                                    }
                                                    inputField.siblings('.recommendationStopCode').html(recommendationList);
                                                }
                                            })
                                        } 
                                    });
                                    
                                    $("#stop-list").on("click", ".stationCodeRecomenation", function(){
                                        const stationCode = $(this).find(".codeRecommendation").text();
                                        const stationName = $(this).find(".stationNameAutofill").text();
                                        $(this).parent().siblings(".station-code").val(stationCode);
                                        $(this).parent().parent(".codeContainer").siblings(".nameContrainer").children(".stationName").val(stationName)
                                        $(this).parent().hide();
                                    })
                                })
                            </script>
                        </div>
            </div>
            <!-- Train List Table end-->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    <script>
        $(document).ready(function(){
            $("#sorce").on('input', function() {
                const SorceStation = $("#sorce").val();
                if(SorceStation !== ""){
                    let recommendationList = "";
                    $.ajax({
                            url:`/admin/getStationRecommendation/${SorceStation}`,
                            type: "GET",
                            success: function(res){
                                for(const i in res){
                                    //console.log(res[i])
                                    recommendationList = recommendationList + `<li class="list-group-item sorceStationNames">${res[i].name}</li>`;
                                    //console.log(recommendationList)
                                }
                               // console.log(recommendationList)
                                $("#recommendationListSorce").html(recommendationList);
                            }
                    })
                }
            });
            $("#destination").on("input", function(){
                const DestinationName = $("#destination").val();
                console.log(DestinationName);
                if(DestinationName !== ""){
                    $.ajax({
                        url:`/admin/getStationRecommendation/${DestinationName}`,
                        type: "GET",
                        success: function(res){
                            let DrecommendationList = ""
                            for(const i in res){
                                DrecommendationList = DrecommendationList + `<li class="list-group-item DestinationStationNames">${res[i].name}</li>`;
                            }
                            $("#recommendationListDestination").html(DrecommendationList);
                        }
                    })
                }
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            // Event delegation: attach click event to dynamically generated list items
            $('#recommendationListSorce').on('click', '.sorceStationNames', function() {
                var stationName = $(this).text();
                $("#sorce").val(stationName);
                $('#recommendationListSorce').hide();
            });
            $("#recommendationListDestination").on("click", ".DestinationStationNames", function(){
                var stationName = $(this).text();
                $("#destination").val(stationName);
                $("#recommendationListDestination").hide();
            })
        });
    </script>
</body>
</html>