<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head') %>
    <link rel="stylesheet" href="/style/search.css" />
  </head>
  <body>
    <%- include('../includes/header') %>
    <main>
      <% if(trainData != null ) { %>
      <div class="card" id="train-list">
        <h3 class="card-header">
          <%= trainData.tsname %>(<%= trainData.trainnumber %>)
        </h3>
        <div class="card-body">
          <p><strong>Full Name : </strong><%= trainData.tlname %></p>
          <p>
            <strong> Sorce : </strong><%= trainData.sorce %>
            (<%=trainData.deparcherTime %>)
          </p>
          <p>
            <strong>Destination :</strong><%= trainData.detination%> (<%=
            trainData.arivaltime %>)
          </p>

          <p><strong>Total Duration : </strong><%= trainData.TotalTime %></p>
          <p>
            <strong>Number of Stops : </strong><%= trainData.TotalStation %>
          </p>
          <p><strong>Avarage Speed : </strong><%= trainData.avgspeed %></p>
          <a
            href="/review/<%= trainData.trainnumber %>"
            class="btn btn-outline-success"
          >
            See Review
          </a>
        </div>
      </div>
      <div class="container">
        <div>
          <h3 style="text-align: center" class="mt-5">Stops</h3>
          <ul class="list-group">
            <% for(const stop of stops) { %>
            <li class="list-group-item mt-3 p-3 shadow-sm rounded">
              <h6 class="card-header bg-primary text-white p-2 rounded">
                <%= stop.StationName %> (<%= stop.StationCode %>)
              </h6>
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <p><strong>Arrival Time:</strong> <%= stop.ArivalTime %></p>
                  <p>
                    <strong>Departure Time:</strong> <%= stop.DepartureTime %>
                  </p>
                </div>
                <div class="d-flex justify-content-between">
                  <p><strong>Day:</strong> <%= stop.Day %></p>
                  <p>
                    <strong>Distance From Source:</strong> <%=
                    stop.DistanceFromSorce %> km
                  </p>
                </div>
              </div>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
      <% } else { %>
      <div
        style="text-align: center; margin-top: 20px"
        class="alert alert-danger show"
        role="alert"
      >
        <p>Train not found. Check Number you have entered</p>
      </div>
      <% } %>
    </main>
    <%- include('../includes/footer') %>
  </body>
</html>
