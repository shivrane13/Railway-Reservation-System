            <!-- Form -->
                <div class="container-fluid pt-4 px-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Shedule Train</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-center">
                            <p id="response"></p>
                        </div>
                        <form id="sheduleForm">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label class="floating-label" for="number">Number</label>
                                        <input type="text" class="form-control" id="number"  name="number">
                                        <ul class="list-group list-group-flush position-absolute recommendationList" id="recommendationListNumber" style="width: 300px; left: 10px;">
                                           
                                        </ul>
                                    </div>
                                    
                                    <script>
                                        $(document).ready(function(){
                                            $("#recommendationListNumber").hide();
                                            $("#number").on("input", function(){
                                                const input = $("#number").val();
                                                $("#recommendationListNumber").show();
                                                $.ajax({
                                                    url:`/admin/getTrainNumberRecommendation/${input}`,
                                                    type : "GET",
                                                    success : function(res) {
                                                        let recommendationList = "";
                                                        for (let i in res) {
                                                        recommendationList =
                                                            recommendationList +
                                                            `<li class="list-group-item trainNumberRecommendation d-flex justify-content-between"><span class="codeRecommendation">${res[i].trainnumber}</span><span class="stationNameAutofill fw-light fs-6">${res[i].tsname}</span></li>`;
                                                        }
                                                        $("#recommendationListNumber").html(recommendationList);
                                                    }
                                                }) 
                                            })
                                            $("#recommendationListNumber").on("click", ".trainNumberRecommendation" , function(){
                                                const trainnumber = $(this).find(".codeRecommendation").text();
                                                $("#number").val(trainnumber);
                                                $("#recommendationListNumber").hide();
                                            })
                                        })
                                    </script>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label class="floating-label" for="date">Date</label>
                                        <input type="date" class="form-control" id="date" name="date" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label class="floating-label" for="available">Available</label>
                                        <input type="text" class="form-control" id="available" name="available">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success" id="sheduleBtn" style="margin-top: 22px;">Shedule</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <script>
                        const sheduleBtn = $("#sheduleBtn");
                        const sheduleForm = $("#sheduleForm");
                        $(document).ready(function(){
                            sheduleForm.submit(function(e){
                                const number = $("#number").val();
                                const date = $("#date").val();
                                const available = $("#available").val();
                                e.preventDefault();
                                if (number!="" && date!="" && available!="") {
                                    const data = {
                                    "number" : number,
                                    "date" : date,
                                    "available" : available
                                    }
                                    $.ajax(
                                        {
                                            url : "/admin/shedule",
                                            type : "POST",
                                            data : data
                                        }
                                    )
                                    $("#response").html("Date Inserted Successfully")
                                } else {
                                    $("#response").html("Value Cannot be Null")
                                }
                            })
                        })
                    </script>
                </div>
            </div>
            <!-- Form ended -->

